{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container d-flex justify-content-center py-5 min-height align-items-center">
        <div class="col-10 col-sm-10 col-md-6 col-lg-6">
            <h1 class="text-center">Registration</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm,{ 'attr' : { 'class': 'd-flex align-items-center flex-column form-custom' } }) }}
                    {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary">Create an account</button>
                <a href="{{path('app_login')}}" class="text-center py-3">Already an account ?</a>
            {{ form_end(registrationForm) }}
            
        </div>
    </div>
{% endblock %}
