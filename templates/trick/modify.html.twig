{% extends 'base.html.twig' %}

{% block title %}
    Ajouter une nouvelle figure
{% endblock %}

{% block body %}
<div class="trick-single">
<div class="container">
        {{ form_start(form, {
                    'attr': {
                        'novalidate': 'novalidate',
                        'class': 'col-lg-5'
                        }
                    })
                }}
<div class="input">
    <label for="trick_name">Nom de la figure</label>
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}
</div>

<div class="input">
    <label for="trick_description">Description de la figure</label>
    {{ form_widget(form.description) }}
    {{ form_errors(form.description) }}
</div>

<div class="input">
    <label for="trick_group">Trick group : </label>
    {{ form_widget(form.trickGroup) }}
    {{ form_errors(form.trickGroup) }}
</div>


<div class="gallery">
        {% for image in images %}
            <span class="image">
                <img src="{{asset('assets/img/tricks/mini/300x300-')}}{{image.name}}" alt="" srcset="">
                <a href="{{path('deleteTrickImage', {id: image.id})}}" class="delete"><img class="icon" src="{{asset('assets/img/svg/trash.svg')}}" data-delete data-token="{{csrf_token('delete' ~ image.id )}}"></a>
            </span>
        {% endfor %}



        {% for video in videos %}
                {{video.embed|raw}}
        {% endfor %}

</div>

<div class="input">
    <label for="images">Trick images : </label>
    {{ form_widget(form.images) }}
    {{ form_errors(form.images) }}
</div>


<div id="videos" class="py-3" data-prototype="{{form_row(form.videos.vars.prototype)|e('html_attr') }}">
    {{form_row(form.videos)}}
    <span></span>
</div>


{{ form_end(form) }}
</div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('assets/js/form.js')}}"></script>
    <script src="{{asset('assets/js/image.js')}}" defer></script>
{% endblock %}

