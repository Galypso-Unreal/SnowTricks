{% extends 'base.html.twig' %}

{% block title %}Forget Password
{% endblock %}

{% block body %}
	<section class="container d-flex justify-content-center py-5 min-height align-items-center">
		<div class="col-12 col-sm-12 col-md-8 col-lg-6">
			<h1>Forget Password</h1>
			<div class="d-flex align-items-center flex-column form-custom">
				{{form_start(form)}}
				{{form_row(form.username)}}
				<button type="submit" class="btn btn-lg btn-primary">Ask for reset password</button>
				{{form_end(form)}}
			</div>

		</div>
	</section>
{% endblock %}
