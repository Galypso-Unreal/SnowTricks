{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue sur SnowTricks
{% endblock %}

{% block body %}
    {% include "elements/arrow.html.twig" %}
    <div class="hero">
        <div class="content">
            <div class="hero_background"></div>
            <div class="text_hero column flex position-absolute">
                <h1 class="title">
                    SnowTricks
                </h1>
                <h2 class="subtitle h4_style">
                    Découvrez la magie des figures mystérieuses dans la neige et laissez-vous emporter par leur beauté éphémère.
                </h2>
            </div>
            <img src="{{asset('assets/img/homepage.jpg')}}">
        </div>
    </div>

    <div class="tricks-homepage" id="tricks-homepage">

        <div class="container">
            
            <div class="d-flex flex-row flex-wrap tricks">

                {% for trick in tricks %}
                    {% include "teasers/trick.html.twig" with {'trick' : trick} %}
                {% endfor %}

            </div>

            <div class="loader-container">
                
                <div class="inner-container">
                    <span class="loader"></span>
                    <div class="h2_style">Chargement en cours des figures suivantes ...</div>
                </div>
            </div>
            

            <div class="btn btn-primary loadmore text_style"  data-page="1" data-all-page="{{number_page}}">Voir plus de tricks ! </div>
            
        
        </div>
        

    </div>

    {% include 'component/modal.html.twig'%}

{% endblock %}